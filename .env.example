# feedder-mcp Environment Configuration Example
# Copy this file to .env and fill in real values.

# ==================== Privacy Fields (Secrets) ====================
OPENAI_API_KEY=<your_openai_api_key>
GMAIL_TOKEN_JSON=<your_gmail_token_json>
GMAIL_CREDENTIALS_JSON=<your_gmail_credentials_json>
ZOTERO_LIBRARY_ID=<your_zotero_library_id>
ZOTERO_API_KEY=<your_zotero_api_key>
POLITE_POOL_EMAIL=<your_email@example.com>
OPENALEX_API_KEY=<your_openalex_api_key>

# ==================== Core Key Fields ====================
SERVER_NAME=feedder-mcp
OPENAI_MODEL=gpt-4o-mini
# Optional for compatible providers (DeepSeek/Azure/OpenAI-compatible API)
OPENAI_BASE_URL=
RESEARCH_PROMPT=
RESEARCH_PROMPT_FILE=

PAPER_FEEDDER_MCP_OPML=feeds/RSS_official.opml
PAPER_FEEDDER_MCP_USER_AGENT=feedder-mcp/2.0
RSS_TIMEOUT=30
RSS_MAX_CONCURRENT=10

GMAIL_TOKEN_FILE=feeds/token.json
GMAIL_CREDENTIALS_FILE=feeds/credentials.json
GMAIL_QUERY=
GMAIL_MAX_RESULTS=50
GMAIL_MARK_AS_READ=false
GMAIL_TRASH_AFTER_PROCESS=true
GMAIL_VERIFY_TRASH_AFTER_PROCESS=true
GMAIL_VERIFY_TRASH_LIMIT=50
GMAIL_PROCESSED_LABEL=
GMAIL_SENDER_FILTER=
GMAIL_SENDER_MAP_JSON=

ZOTERO_LIBRARY_TYPE=user
TARGET_COLLECTION=00_INBOXS_AA

# ==================== Metadata API ====================
API_TIMEOUT=45
API_USER_AGENT=feedder-mcp/2.0 (https://github.com/feedder-mcp; mailto:{email})

CROSSREF_EMAIL=
CROSSREF_API_BASE=https://api.crossref.org
CROSSREF_TIMEOUT=
CROSSREF_USER_AGENT=

OPENALEX_EMAIL=
OPENALEX_API_BASE=https://api.openalex.org
OPENALEX_TIMEOUT=
OPENALEX_USER_AGENT=
OPENALEX_MAX_REQUESTS_PER_SECOND=10

# ==================== AI Filter ====================
AI_BATCH_SIZE=50
AI_FILTER_MAX_TOKENS=1000

# ==================== Keyword Generator ====================
KEYWORD_GENERATE_MAX_TOKENS=500
KEYWORD_SELECT_MAX_TOKENS=300
